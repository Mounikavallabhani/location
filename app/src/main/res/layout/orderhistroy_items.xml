<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="130dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="2">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:id="@+id/ordersend"
           android:layout_marginTop="8dp"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.7"
               android:gravity="right|end"
               android:layout_marginRight="10dp"
               android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/productimage"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="10dp"
                   android:gravity="left|end"
                   android:src="@drawable/maillogo"
                   android:scaleType="fitXY" />
           </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="10dp"
               android:layout_width="0dp"
               android:layout_weight="2.8"
               android:weightSum="4"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/order1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Narasimha"
                   android:gravity="center|left"
                   android:textSize="18dp"
                   android:textColor="#595959"
                   android:layout_weight="1.7"/>
               <android.support.v4.widget.Space
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="0.1"/>

               <TextView
                   android:id="@+id/order2"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="500ml"
                   android:textSize="10dp"
                   android:textColor="#6e6c6c"
                   android:layout_weight="1.2"/>

               <android.support.v4.widget.Space
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1.4"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/productcost"
                   android:layout_width="20dp"
                   android:src="@drawable/ic_chevron_right_black_24dp"
                   android:gravity="center|center_horizontal"
                   android:layout_height="20dp"
                   tools:ignore="VectorDrawableCompat" />
           </LinearLayout>

       </LinearLayout>


       <View
           android:layout_width="match_parent"
           android:background="#3cbfbdbd"
           android:layout_height="0dp"
           android:layout_weight="0.01"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.9"
           android:weightSum="3"
           android:layout_marginLeft="15dp"
           android:orientation="vertical">
           <Space
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.3"/>

           <TextView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:textColor="#6e6c6c"
             android:textSize="14dp"
             android:id="@+id/order3"
             android:text="string/Rsssddddsds"
             android:layout_weight="1"/>
           <Space
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.3"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:textSize="14dp"
               android:id="@+id/order4"
               android:text="werdftg"
               android:gravity="left|center"
               android:textColor="#595959"
               android:layout_weight="1"/>
           <Space
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.1"/>


       </LinearLayout>
   </LinearLayout>

</android.support.v7.widget.CardView>