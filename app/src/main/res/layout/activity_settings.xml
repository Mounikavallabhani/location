<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:textColor="#009DFC"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EditProfile"/>
    <EditText
        android:fontFamily="@font/six"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="narasimha"/>
    <EditText
        android:fontFamily="@font/six"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="123456789" />
    <EditText
        android:fontFamily="@font/six"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="narasimha@gmail.com"/>
        <Button
            android:fontFamily="@font/six"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:drawableRight="@drawable/exit"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="#009DFC"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:text="Logout"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#75c3f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:fontFamily="@font/six"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/location24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/six"
        android:padding="10dp"
        android:text="Door No:/Floor No: ++++(Lane Number 1miyapur hmt colony hyderabad street no 34 house no 24 )"
        android:textSize="16dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:fontFamily="@font/six"
            android:background="#207F12"
            android:id="@+id/confirmorder"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>