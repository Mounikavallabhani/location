<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/milk"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:textColor="#000"
              android:fontFamily="@font/six"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heritage Toned Milk"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                   android:fontFamily="@font/six"
                    android:textColor="#c6c5c5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500ml"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="120dp"
                    android:background="@drawable/incrementshape"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/checkdecrement"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/minusoriginal"/>

                    <TextView
                        android:id="@+id/checkadd"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:text="1" />
                    <ImageView
                        android:id="@+id/checkincrement"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plusoriginal"/>

                </LinearLayout>







            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView

                android:textColor="#009DFC"
                android:textSize="18dp"
                android:id="@+id/t1"
                android:fontFamily="@font/six"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#898787" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
         android:fontFamily="@font/six"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t2"
                android:textSize="15dp"
                android:fontFamily="@font/six"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
         android:fontFamily="@font/six"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taxes &amp; Charges"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
               android:id="@+id/t3"
                android:textSize="15dp"
                android:fontFamily="@font/six"
                android:layout_marginRight="49dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:fontFamily="@font/six"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery fee"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t4"
                android:textSize="15dp"
                android:layout_marginRight="49dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:fontFamily="@font/six"
                android:layout_height="wrap_content"
                android:text="0.00"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:fontFamily="@font/six"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t5"
                android:textSize="18dp"
                android:fontFamily="@font/six"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"/>
        </RelativeLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/layoutshape"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/six"
                android:textSize="17dp"
                android:drawableLeft="@drawable/location24"
                  android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Miyapur Hmt Colony Hyderabad"/>
            <TextView
                android:fontFamily="@font/six"
                android:textColor="#009DFC"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE"/>
            </LinearLayout>
            <Button
                android:fontFamily="@font/six"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:background="@drawable/greenbackground"
                android:id="@+id/pay"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Proceed To Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



</LinearLayout>
